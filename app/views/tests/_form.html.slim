= form_for([@list, @test]) do |f|
  - if @test.errors.any?
    #error_explanation
      h2
        = pluralize(@test.errors.count, "error")
        |  prohibited this test from being saved:
      ul
        - @test.errors.full_messages.each do |message|
          li
            = message
  = f.hidden_field :list_id
  .field
    = f.label :text
    br
    = f.text_area :text, class: 'form-control', rows: 20
  .actions
    = f.submit "Testear", class: 'btn btn-default'
